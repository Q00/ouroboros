{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude-plugin/scripts/keyword-detector.mjs",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude-plugin/scripts/drift-monitor.mjs",
            "timeout": 3
          }
        ]
      }
    ]
  }
}
